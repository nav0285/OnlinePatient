<% if @department.doctors.nil? %>
	<h1> No Doctors </h1>
<% else %>
		<p><b>Head of the Department</b></p>
		<% @department.doctors.each do |d| %>
			<% if d.admin? %>
					<%= d.name %><br/>
			<% end %>		
		<% end %>
		<p><b>Associate Doctors</b></p>	
		<% @department.doctors.each do |d| %>
			<% if d.admin? %>
			<% else %>		
				<%=	d.name %><br/>
			<% end %>
		<% end %>
<% end %>
<% if current_doctor %>
	<% if current_doctor.admin %>
		<%= link_to 'New', new_doctor_path(:id=>@department.id) %>
	<% end %>
<% end %>
